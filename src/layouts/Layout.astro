--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="JhonEduard26 | Portfolio">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent-gradient: linear-gradient(90deg, rgba(2,0,36,1) 0%, rgba(9,9,121,1) 35%, rgba(0,212,255,1) 100%);
	}
	html {
		font-family: system-ui, sans-serif;
		font-size: 62.5%;
	}
	body {
		margin: 0;
		font-size: 1.6rem;
	}
	ul {
		list-style: none;
	}
	a {
		color: black;
		text-decoration: none;
	}
	.title {
		font-size: 4.6rem;
		font-weight: 800;
		text-align: center;
	}
	.subtitle {
		text-align: center;
		font-size: 4rem;
	}
	.paragraph {
		font-size: 2.4rem;
		font-weight: 200;
	}
</style>
