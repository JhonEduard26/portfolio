---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="JhonEduard26 | Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --main: #004e7a;
    --alt: #0079a8;
    --secondary: #00214d;
    --tertiary: #66a5d1;
    --alt-light: #b5daf2;
  }
  html {
    font-family: system-ui, sans-serif;
    font-size: 62.5%;
  }
  body {
    margin: 0;
    font-size: 1.6rem;
		background-color: whitesmoke;
  }
  ul {
    list-style: none;
  }
  a {
    color: white;
		text-decoration: none;
  }
  a:hover {
    color: var(--tertiary);
  }
  .title {
    font-size: 4.6rem;
    font-weight: 800;
    text-align: center;
  }
  .subtitle {
    text-align: center;
    font-size: 3.2rem;
  }
  .paragraph {
    font-size: 2.4rem;
    font-weight: 200;
		text-wrap: balance;
  }
  .accent-text {
    color: var(--secondary);
  }
</style>
