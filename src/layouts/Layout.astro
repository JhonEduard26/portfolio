---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="JhonEduard26 | Portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --main: #0077C2;
    --secondary: #59a5f5;
    --tertiary: #c8ffff;
    --bg: #FFFFFF;
    --card-bg: #f5f5f5;
    --titles: #333333;
    --subtitles: #5c5c5c;
  }
  html {
    font-family: sans-serif;
    font-size: 62.5%;
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    font-size: 1.6rem;
		background-color: var(--bg);
  }
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  a {
    color: black;
		text-decoration: none;
    transition: color 0.2s ease-in-out;
  }
  a:hover {
    color: var(--main);
  }
  img {
    max-width: 100%;
  }
  .title {
    font-size: 4.6rem;
    font-weight: 800;
    color: var(--titles);
    text-align: center;
  }
  .subtitle {
    text-align: center;
    font-size: 3.2rem;
    color: var(--subtitles);
  }
  .paragraph {
    font-size: 2.4rem;
    font-weight: 200;
		text-wrap: balance;
    color: var(--subtitles);
  }
  .section {
    min-height: 80dvh;
    margin-top: 2.4rem;
    padding: 2.4rem;
  }
  .svg-icon {
    width: 48px;
    height: 48px;
    fill: white;
    transition: fill 0.2s ease-in-out;
  }
  .svg-icon:hover {
    fill: black;
  }
  .accent-text {
    color: var(--main);
  }
  @media (width >= 768px) {
    .section {
      padding: 0;
    }
  }
</style>
