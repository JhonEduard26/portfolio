--- 
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="JhonEduard26 | Portfolio">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
	}
	html {
		font-family: system-ui, sans-serif;
		font-size: 62.5%;
	}
	body {
		margin: 0;
		font-size: 1.6rem;
	}
	ul {
		list-style: none;
	}
	a {
		color: black;
		text-decoration: none;
	}
</style>
