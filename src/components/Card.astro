---
interface Props {
  title: string;
  body: string;
  href: string;
  imgSrc: string;
	slugTitle: string
}

const { href, title, body, imgSrc, slugTitle } = Astro.props;
---

<li class="link-card">
  <img class="card-img" src={imgSrc} alt={title} />
  <h3>
    {title}
  </h3>
  <p>
    {body}
  </p>
	<div class="buttons-container">
			<a class="button-inline" href={href} target="_blank">Sitio web <span>&rarr;</span></a>
			<a class="button-inline" href={`portfolio/${slugTitle}`}>Conoce m√°s</a>
	</div>
	
</li>
<style>
  .link-card {
		background-color: var(--card-bg);
		border-radius: 8px;
		padding: 1.2rem;
  }
	.card-img {
		margin-bottom: 8px;
		aspect-ratio: 1/1;
		object-fit: cover;
	}
  h3 {
    margin: 0;
    font-size: 2.2rem;
		text-align: center;
		color: var(--titles);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 2rem;
		color: var(--subtitles);
  }
	.buttons-container {
		display: flex;
		justify-content: space-evenly;
		align-items: center;
		width: 100%;
	}
	.button-inline {
		display: inline-flex;
		padding: 8px 12px;
		border-radius: 4px;
		background-color: var(--secondary);
		color: white;
		transition: background-color 0.2s ease-in-out;
	}
	.button-inline:nth-child(even) {
		background-color: var(--bg);
		color: var(--titles);
		outline: 2px solid var(--secondary);
	}
	.button-inline:nth-child(even):hover {
		background-color: var(--main);
	}
	.button-inline:hover {
		background-color: var(--main);
		color: white;
	}
	.button-inline > span {
		margin-left: 4px;
	}

</style>
