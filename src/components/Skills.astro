---
import html5 from '../assets/html5.svg'
import css3 from '../assets/css3.svg'
import javascript from '../assets/javascript.svg'

import nodedotjs from '../assets/nodedotjs.svg'
import nestjs from '../assets/nestjs.svg'
import postgresql from '../assets/postgresql.svg'

import git from '../assets/git.svg'
import vite from '../assets/vite.svg'
import vscode from '../assets/visualstudiocode.svg'
---

<section class="section" id="skills">
  <h2 class="title">Habilidades</h2>
  <div class="section-skills">
    <section class="skills-card revealing-card">
      <div class="skills-card-head">
        <svg class="skills-card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h12a3 3 0 013 3v12a3 3 0 01-3 3H6a3 3 0 01-3-3V6zm14.25 6a.75.75 0 01-.22.53l-2.25 2.25a.75.75 0 11-1.06-1.06L15.44 12l-1.72-1.72a.75.75 0 111.06-1.06l2.25 2.25c.141.14.22.331.22.53zm-10.28-.53a.75.75 0 000 1.06l2.25 2.25a.75.75 0 101.06-1.06L8.56 12l1.72-1.72a.75.75 0 10-1.06-1.06l-2.25 2.25z" clip-rule="evenodd" />
        </svg>        
        <h3 class="skills-name">        
          Frontend
        </h3>
      </div>
      <div class="skills-list-container">
        <div class="skills-img-container">
          <picture>
            <img src={html5} alt="static badge">
          </picture>
          <h4>
            HTML
          </h4>
        </div>
        <div class="skills-img-container">
          <picture>
            <img src={css3} alt="static badge">
          </picture>
          <h4>
            CSS 
          </h4>
        </div>
        <div class="skills-img-container">
          <picture>
            <img src={javascript} alt="static badge">
          </picture>
          <h4>
            JavaScript  
          </h4>
        </div>
      </div>
    </section>
  
    <section class="skills-card revealing-card">
      <div class="skills-card-head">
        <svg class="skills-card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" className="w-6 h-6">
          <path d="M5.507 4.048A3 3 0 017.785 3h8.43a3 3 0 012.278 1.048l1.722 2.008A4.533 4.533 0 0019.5 6h-15c-.243 0-.482.02-.715.056l1.722-2.008z" />
          <path fill-rule="evenodd" d="M1.5 10.5a3 3 0 013-3h15a3 3 0 110 6h-15a3 3 0 01-3-3zm15 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm2.25.75a.75.75 0 100-1.5.75.75 0 000 1.5zM4.5 15a3 3 0 100 6h15a3 3 0 100-6h-15zm11.25 3.75a.75.75 0 100-1.5.75.75 0 000 1.5zM19.5 18a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" clipRule="evenodd" />
        </svg>                
        <h3 class="skills-name">Backend</h3>
      </div>
      <div class="skills-list-container">
        <div class="skills-img-container">
          <picture>
            <img src={nodedotjs} alt="static badge">
          </picture>
          <h4>
            NodeJS
          </h4>
        </div>
        <div class="skills-img-container">
          <picture>
            <img src={nestjs} alt="static badge">
          </picture>
          <h4>
            NestJS
          </h4>
        </div>
        <div class="skills-img-container">
          <picture>
            <img src={postgresql} alt="static badge">
          </picture>
          <h4>
            Postgres
          </h4>
        </div>
      </div>
    </section>
  
    <section class="skills-card revealing-card">
      <div class="skills-card-head">
        <svg class="skills-card-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path fill-rule="evenodd" d="M12 6.75a5.25 5.25 0 016.775-5.025.75.75 0 01.313 1.248l-3.32 3.319c.063.475.276.934.641 1.299.365.365.824.578 1.3.64l3.318-3.319a.75.75 0 011.248.313 5.25 5.25 0 01-5.472 6.756c-1.018-.086-1.87.1-2.309.634L7.344 21.3A3.298 3.298 0 112.7 16.657l8.684-7.151c.533-.44.72-1.291.634-2.309A5.342 5.342 0 0112 6.75zM4.117 19.125a.75.75 0 01.75-.75h.008a.75.75 0 01.75.75v.008a.75.75 0 01-.75.75h-.008a.75.75 0 01-.75-.75v-.008z" clip-rule="evenodd" />
          <path d="M10.076 8.64l-2.201-2.2V4.874a.75.75 0 00-.364-.643l-3.75-2.25a.75.75 0 00-.916.113l-.75.75a.75.75 0 00-.113.916l2.25 3.75a.75.75 0 00.643.364h1.564l2.062 2.062 1.575-1.297z" />
          <path fill-rule="evenodd" d="M12.556 17.329l4.183 4.182a3.375 3.375 0 004.773-4.773l-3.306-3.305a6.803 6.803 0 01-1.53.043c-.394-.034-.682-.006-.867.042a.589.589 0 00-.167.063l-3.086 3.748zm3.414-1.36a.75.75 0 011.06 0l1.875 1.876a.75.75 0 11-1.06 1.06L15.97 17.03a.75.75 0 010-1.06z" clip-rule="evenodd" />
        </svg>
        <h3 class="skills-name">Herramientas</h3>
      </div>
      <div class="skills-list-container">
        <div class="skills-img-container">
          <picture>
            <img src={git} alt="static badge">
          </picture>
          <h4>
            Git
          </h4>
        </div>
        <div class="skills-img-container">
          <picture>
            <img src={vite} alt="static badge">
          </picture>
          <h4>
            Vite
          </h4>
        </div>
        <div class="skills-img-container">
          <picture>
            <img src={vscode} alt="static badge">
          </picture>
          <h4>
            VS Code 
          </h4>
        </div>
      </div>
    </section>
  </div>
</section>

<style>
  .section-skills {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }
  .skills-name {
    margin: 0;
    text-align: center;
    font-size: 2.4rem;
    font-weight: 800;
  }
  .skills-card {
    width: 280px;
    margin-bottom: 2.4rem;
    padding: 2.4rem;
    background-color: var(--card-bg);
    border-radius: 6px;
  }
  .skills-card-head {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.6rem;
    margin-bottom: 3.2rem;
  }
  .skills-card-icon {
    width: 60px;
    height: 60px;
  }
  .skills-list-container {
    display: flex;
    justify-content: space-between;
  }
  .skills-img-container {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  picture img {
    width: 52px;
    height: 52px;
  }
</style>