<header>
  <nav>
    <a href="/" class="header-author">JhonEduard26</a>
    <ul class="header-list">
      <li>
        <ul class="header-pages--desktop">
          <li class="item--desktop"><a href="/#about">Acerca</a></li>
          <li class="item--desktop"><a href="/#skills">Habilidades</a></li>
          <li class="item--desktop"><a href="/#portfolio">Portfolio</a></li>
          <li class="item--desktop"><a href="/#contact">Contacto</a></li>
        </ul>
        <div id="nav-lines">
          <svg viewBox="0 0 64 64">
            <line id="nav-line-1" x1="8" x2="56" y1="16" y2="16" class="nav-line" />
            <line id="nav-line-2" x1="8" x2="56" y1="32" y2="32" class="nav-line" />
            <line id="nav-line-3" x1="8" x2="56" y1="48" y2="48" class="nav-line" />

            <line x1="16" x2="48" y1="16" y2="48" class="cross-line" />
            <line x1="16" x2="48" y1="48" y2="16" class="cross-line" />

            <rect class="rect" width="42" height="42" x="11" y="11" />
        </svg>
        </div>      
      </li>
    </ul>
  </nav>
</header>

<ul class="header-pages" id="menu-mobile">
  <li class="page-item"><a href="#about">Acerca</a></li>
  <li class="page-item"><a href="#skills">Habilidades</a></li>
  <li class="page-item"><a href="#portfolio">Portfolio</a></li>
  <li class="page-item"><a href="#contact">Contacto</a></li>
</ul>

<style>
  header {
    z-index: 10;
    position: relative;
    width: 100%;
    height: 80px;
    background-color: var(--bg);
    border-bottom: 2px solid var(--main);
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
    padding: 0 2.4rem;
  }
  .header-author {
    font-size: 2.4rem;
    font-weight: 800;
  }
  #nav-lines {
    cursor: pointer;
    width: 48px;
    height: 48px;
  }
  .rect {
    stroke-width: 0;
    fill: transparent;
    transform-origin: 50% 50%;
    transition: all 0.3s ease-in-out;
    transform: rotate(0deg);
  }
  .cross-line {
    stroke: black;
    stroke-width: 0;
    transform-origin: 50% 50%;
    transition: all 0.3s ease-in-out;
  }
  .nav-line {
    stroke: black;
    transform-origin: 50% 50%;
    stroke-width: 4px;
    transition: all 0.3s ease-in-out;
  }
  .active .cross-line {
      stroke-width: 4px;
  }
  .active .nav-line,
  .active #nav-line-1,
  .active #nav-line-3 {
      transform: scale(0.01);
  }
  .header-pages--desktop {
    display: none;
  }
  .header-pages {
    position: fixed;
    top: -100dvh;
    left: 3.6rem;
    right: 3.6rem;
    padding: 2.4rem;
    padding-top: 4rem;
    background-color: var(--bg);
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    border: 2px solid var(--main);
    border-top: 0;
    transition: top 0.4s ease-in-out;
  }
  .show-menu {
    top: 9dvh;
  }
  .page-item {
    width: 100%;
    margin-bottom: 24px;
    font-size: 2rem;
    font-weight: 500;
  }
  .page-item a {
    padding: 6px;
  }

  @media (width > 768px) {
    nav {
      max-width: 120ch;
      margin: auto;
    }
    .header-pages--desktop {
      display: flex;
      column-gap: 36px;
    }
    #nav-lines {
      display: none;
    }
    .item--desktop {
      font-size: 2rem;
      font-weight: 600;
    }
    .item--desktop > a {
      padding: 4px 8px;
    }
  }
</style>

<script>
  const navLines = document.getElementById('nav-lines')!
  const menuMobile = document.getElementById('menu-mobile')!
  const linksList = document.querySelectorAll('.page-item a') 

  function toggleNav() {
    navLines.classList.toggle('active')
    menuMobile.classList.toggle('show-menu')
  }

  navLines.addEventListener('click', toggleNav)

  linksList.forEach(link => link.addEventListener('click', toggleNav))

</script>